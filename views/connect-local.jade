extends layout

block content 
    div.row
        div.col-sm-12
            h1.text-right Login
            h3.text-right Don't have an account? <a href="/register"><span style="color: #FC4A1A">Signup</span></a>
    hr
    div.row
        div.col-sm-2
        div.col-sm-8 
            if message.length > 0
                div(class="alert alert-danger")
                    | !{message}
            form(id="form", name="login-form", method="post", action="/connect/local")
                div.form-group
                    label(for="email") Username
                    input(type="text", name="email" class="form-control")
                div.form-group
                    label(for="password") Password
                    input(type="password" name="password" class="form-control")
            hr
            p Need an account? 
                a(href="/register") Signup
            p Or go 
                a(href="/") home.

        div.col-sm-2
    div(class="row continue")
        .div
            input(type="submit", value="Add Local", class="btn btn-default btn-submit", id="submit")
    script(type='text/javascript').
        $('.continue').click(function(){
            $('#form').submit();
        });
    